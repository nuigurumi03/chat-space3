.message
  .upper-message
    .upper-message__user-name{"data-upper-message__user-name" => "hoge"}
      = message.user.name
    .upper-message__date{"data-upper-message__data" => "hoge"}
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      %p.lower-message__content{"data-lower-message__content" => "hoge"}
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
